// Optimization flags.
pub enum Opt: str {
	Copy = "--opt-copy",
	DeadCode = "--opt-deadcode",
}

// JuleC optimization levels.
pub enum OptLevel {
	// No optimization.
	L0,

	// Passed flags are:
	//  - Opt.Copy
	//  - Opt.DeadCode
	L1,
}

// Current optimization level.
pub static mut OPTIMIZATIONS: []Opt = nil

// Pushes optimization flags related with optimization level.
pub fn push_opt_level(level: OptLevel) {
	match level {
	| OptLevel.L0:
		OPTIMIZATIONS = nil

	| OptLevel.L1:
		OPTIMIZATIONS = append(OPTIMIZATIONS,
			Opt.Copy,
			Opt.DeadCode)

	|:
		ret
	}
}

// Reports whether
pub fn is_opt_enabled(opt: Opt): bool {
	for _, oopt in OPTIMIZATIONS {
		if opt == oopt {
			ret true
		}
	}
	ret false
}
