}

fn test_multiple_variable() {
	let (a, b, _, c) = 100, 200, nil, false
	_ = c
	a, b = 10, 20
	a, b = b, a
	outln(a)
	outln(b)
	a, b, _ = test_multiple_return()
}

fn test_multiple_return() (i32, i32, bool) { ret 5, 5, false }

fn test_iter() {
	// Infinity iteration
	for {
		break
		continue
	}

	// While iteration
	for !false {
		break
	}

	// Foreach iteration
	for in "Hello" {
		outln("Jule")
	}

	for index: i32 in "Hello" {
		outln(index)
	}

	for _, c: in "Hello" {
		outln(c)
	}

	for _, element: str in ([]str{"The", "Jule", "Programming", "Language"}) {
		outln(element)
	}

	for index: in "TEST" {
		_ = index
	}

	for ; ; { break }

	for let a = 0; a <= 3; a++ {
		outln(a)
	}
}

fn test_if_expressions() {
	if true {
		outln("IF")
	} else if true { outln("ELSE_IF0") } else if false {
		outln("ELSE_IF_1")
