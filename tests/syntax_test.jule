fn test_deferred_calls() {
	defer fn() { outln("Defer 1") }()
	defer fn() { outln("Defer 2") }()
}

fn test_goto() {
	let s = "Hello World"
	{
		let ok = false
		{
			if !ok {
				ok = true
				goto bla
			}
			goto test
		}
	bla:
		outln(ok)
	}
test:
	{
		outln("TEST")
		goto end
	}
	outln(s)
end:
}

