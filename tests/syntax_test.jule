fn test_match_case() {
	match 10 {
	case 1:
		outln("one")
	case 2:
		outln("two")
	default:
		outln("default")
	}

	match {
	case false:
		outln("false")
	case !true:
		outln("!true")
	case false, true:
		outln("false, true")
	default:
		outln("default")
	}
}

