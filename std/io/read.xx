use cpp `read.hpp`

cpp __xxc_read() str
cpp __xxc_readln() str

//doc: Read first part of line from command-line.
@inline
pub read() str {
	ret cpp.__xxc_read()
}

//doc: Reads full-complete line from command-line.
@inline
pub readln() str {
	ret cpp.__xxc_readln()
}

#pragma enofi

// ------- TESTS -------

read_test() {
	out("Input your full name: ")
	input: = read()
	outln("Hello " + input)
}

readln_test() {
	out("Input your full name: ")
	input: = readln()
	outln("Hello " + input)
}

main() {
	read_test()
	readln_test()
}
