use std::fs::{File}
use sys for std::sys

// Returns File handler for stdin.
pub fn stdin(): &File { ret File.new(sys::STDIN) }

// Returns File handler for stdout.
pub fn stdout(): &File { ret File.new(sys::STDOUT) }

// Returns File handler for stderr.
pub fn stderr(): &File { ret File.new(sys::STDERR) }
