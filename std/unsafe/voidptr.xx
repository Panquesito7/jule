//doc: Wrapper structure for voidptr.
pub struct Voidptr {
	ptr:uintptr
}

impl Voidptr {
	@typearg
	type[T]
	pub &cast() *T {
		ptr:*T
		//cxx: @ptr = (@T*)(this->@ptr);
		ret ptr
	}
}

//doc: Returns voidptr instance from uintptr.
@inline
pub voidptr(ptr uintptr) Voidptr {
	ret Voidptr{ptr}
}
