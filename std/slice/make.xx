use cpp `make.hpp`

type[Item]
cpp __make_slice(n int) []Item

// doc:
// Allocated new n sized slice for given data type.
//
// Special cases are:
//  make[Item](n) = nil if n < 0
@inline
type[Item]
pub make(n int) []Item {
	if n < 0 {
		ret nil
	}
	ret cpp.__make_slice[Item](n)
}
