use cpp "heap.hpp"

type[T]
cpp __julec_is_guaranteed(*T) bool

//doc: Reports pointer is heap-guaranteed or not.
type[T]
pub is_guaranteed(ptr: *T) bool {
    if ptr == nil {
        ret false
    }
    ret cpp.__julec_is_guaranteed(ptr)
}
