//doc:
// Returns the absolute value of x.
//
// Special cases are:
//  abs(Â±inf) = +inf
//  abs(nan) = nan
//
//jule:inline
pub fn abs(x: f64) f64 {
	ret f64_from_bits(f64_bits(x) & ^(1 << 63))
}
