//doc: Returns a value with the magnitude of f and the sign of sign.
pub fn copysign(f: f64, sign: f64) f64 {
	const SIGN_BIT = 1<<63
	ret f64_from_bits(f64_bits(f) & ^SIGN_BIT | f64_bits(sign)&SIGN_BIT)
}
