use std::unsafe

// Returns the IEEE 754 binary representation of f,
// with the sign bit of f and the result in the same bit position.
// f32_bits(f32_from_bits(x)) == x.
//
//jule:inline
pub fn f32_bits(f: f32) u32 { ret *std::unsafe::voidptr_of(&f).cast(u32) }

// Returns the floating-point number corresponding
// to the IEEE 754 binary representation b, with the sign bit of b
// and the result in the same bit position.
// f32_from_bits(f32_bits(x)) == x.
//
//jule:inline
pub fn f32_from_bits(b: u32) f32 { ret *std::unsafe::voidptr_of(&b).cast(f32) }

// Returns the IEEE 754 binary representation of f,
// with the sign bit of f and the result in the same bit position,
// and f64_bits(f64_from_bits(x)) == x.
//
//jule:inline
pub fn f64_bits(f: f64) u64 { ret *std::unsafe::voidptr_of(&f).cast(u64) }

// Returns the floating-point number corresponding
// to the IEEE 754 binary representation b, with the sign bit of b
// and the result in the same bit position.
// f64_from_bits(Float64bits(x)) == x.
//
//jule:inline
pub fn f64_from_bits(b: u64) f64 { ret *std::unsafe::voidptr_of(&b).cast(f64) }
