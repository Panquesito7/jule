use std::sys::{self, PATH_MAX, getcwd}

cpp fn chdir(path: str): int

fn __getwd(): (str, bool) {
	let mut buff = make([]byte, PATH_MAX)
	if (unsafe { getcwd(&buff[0], PATH_MAX) }) == nil {
		ret "", false
	}
	ret (str)(buff), true
}

fn __chdir(path: str): bool {
	ret unsafe { std::sys::chdir(&path[0]) } == 0
}
