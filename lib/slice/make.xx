//doc:
// Makes an array have n elements with default values of related data-type.
type[Item_T]
pub make(const n size) []Item_T {
	buffer:[]Item_T
	if n == 0 {
		ret buffer
	}
	//cxx: @buffer =  slice<@Item_T>(@n);
	ret buffer
}
