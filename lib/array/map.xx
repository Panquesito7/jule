//doc:
// Applies function to each element of destination array.
//
// Special case is;
//   map[Item_T](dest, func) = does nothing id dest.empty()
type[Item_T]
pub map(&dest []Item_T, func (Item_T)Item_T) {
	if dest.empty() { ret }

	iter i:size = 0, i < dest.len, i++ {
		element: = &dest[i]
		*element = func(*element)
	}
}
